<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.purse.PurseFragment"
    android:background="@drawable/leather_background_lightbrown"
    >

    <TextView
        android:id="@+id/purse_top_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$CharacterName's Purse"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/purse_money_1.4_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_armor"
        app:layout_constraintStart_toStartOf="@+id/purse_top_textview"
        app:layout_constraintTop_toBottomOf="@+id/purse_top_textview" />

    <TextView
        android:id="@+id/purse_money_1.4_textview"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/purse_money_1.4_imageview"
        app:layout_constraintStart_toStartOf="@+id/purse_money_1.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_1.4_imageview" />

    <ImageView
        android:id="@+id/purse_money_2.4_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_armor"
        app:layout_constraintStart_toStartOf="@+id/purse_money_1.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_1.4_textview" />

    <TextView
        android:id="@+id/purse_money_2.4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/purse_money_2.4_imageview"
        app:layout_constraintStart_toStartOf="@+id/purse_money_2.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_2.4_imageview" />

    <ImageView
        android:id="@+id/purse_money_3.4_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_armor"
        app:layout_constraintStart_toStartOf="@+id/purse_money_2.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_2.4_textview" />

    <TextView
        android:id="@+id/purse_money_3.4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/purse_money_3.4_imageview"
        app:layout_constraintStart_toStartOf="@+id/purse_money_3.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_3.4_imageview" />

    <ImageView
        android:id="@+id/purse_money_4.4_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_armor"
        app:layout_constraintStart_toStartOf="@+id/purse_money_3.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_3.4_textview" />

    <TextView
        android:id="@+id/purse_money_4.4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/purse_money_4.4_imageview"
        app:layout_constraintStart_toStartOf="@+id/purse_money_4.4_imageview"
        app:layout_constraintTop_toBottomOf="@+id/purse_money_4.4_imageview" />

    <EditText
        android:id="@+id/purse_money_1.4_amount_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/purse_money_1.4_textview"
        app:layout_constraintStart_toEndOf="@+id/purse_money_1.4_imageview"
        app:layout_constraintTop_toTopOf="@+id/purse_money_1.4_imageview" />

    <EditText
        android:id="@+id/purse_money_2.4_amount_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/purse_money_2.4_textview"
        app:layout_constraintStart_toEndOf="@+id/purse_money_2.4_imageview"
        app:layout_constraintTop_toTopOf="@+id/purse_money_2.4_imageview" />

    <EditText
        android:id="@+id/purse_money_3.4_amount_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/purse_money_3.4_textview"
        app:layout_constraintStart_toEndOf="@+id/purse_money_3.4_imageview"
        app:layout_constraintTop_toTopOf="@+id/purse_money_3.4_imageview" />

    <EditText
        android:id="@+id/purse_money_4.4_amount_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/purse_money_4.4_textview"
        app:layout_constraintStart_toEndOf="@+id/purse_money_4.4_imageview"
        app:layout_constraintTop_toTopOf="@+id/purse_money_4.4_imageview" />
</androidx.constraintlayout.widget.ConstraintLayout>
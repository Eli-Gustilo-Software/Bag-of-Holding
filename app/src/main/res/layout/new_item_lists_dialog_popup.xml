
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#00000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_constraintPopUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:context=".ui.character.CharacterFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTitlePopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayoutPopUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutPopUp"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#30100D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView3PopUp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/newitem_title_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayoutPopUp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayoutPopUp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="NotSibling" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutPopUp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#30100D"
            android:fontFamily="@font/cinzel_decorative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintTitlePopUp"
            tools:context=".ui.items.NewItemFragment">

            <ImageView
                android:id="@+id/new_item_imageviewPopUp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/new_item_name_edittextPopUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_constraint_layoutPopUp"
                tools:src="@drawable/itemtype_armor_image" />


            <EditText
                android:id="@+id/new_item_name_edittextPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="New Item Name"
                android:fontFamily="@font/cinzel_decorative"
                android:hint="New Item Name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/new_item_effect_edittextPopUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_item_imageviewPopUp" />

            <EditText
                android:id="@+id/new_item_effect_edittextPopUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/cinzel_decorative"
                android:hint="Item Effects ex: (D+4 (+2 Fire DMG)"
                android:inputType="textCapWords"
                android:singleLine="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/new_item_description_editextPopUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_item_name_edittextPopUp" />

            <EditText
                android:id="@+id/new_item_description_editextPopUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="New Item Description"
                android:fontFamily="@font/cinzel_decorative"
                android:hint="Item Description (Optional)"
                android:inputType="textAutoCorrect"
                android:singleLine="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline10PopUp"
                app:layout_constraintEnd_toEndOf="@+id/new_item_effect_edittextPopUp"
                app:layout_constraintStart_toStartOf="@+id/new_item_effect_edittextPopUp"
                app:layout_constraintTop_toBottomOf="@+id/new_item_effect_edittextPopUp" />

            <Button
                android:id="@+id/new_item_back_buttonPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E49F5c"
                android:text="Back"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutPopUp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5PopUp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayoutPopUp"
                app:layout_constraintTop_toBottomOf="@+id/guideline10PopUp" />

            <Button
                android:id="@+id/new_item_create_buttonPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E49F5c"
                android:text="Create"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutPopUp"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayoutPopUp"
                app:layout_constraintStart_toStartOf="@+id/guideline5PopUp"
                app:layout_constraintTop_toBottomOf="@+id/guideline10PopUp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5PopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/spinner_constraint_layoutPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/new_item_imageviewPopUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/new_item_type_spinnerPopUp"
                    style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/generic_scroll_wide"
                    android:paddingTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_constraint_layoutPopUp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guidelinePopUp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/new_item_spinner_textviewPopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/cinzel_decorative"
                    android:text="Item Type:"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_constraint_layoutPopUp"
                    app:layout_constraintEnd_toStartOf="@+id/new_item_type_spinnerPopUp"
                    app:layout_constraintStart_toStartOf="@+id/spinner_constraint_layoutPopUp"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinePopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10PopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
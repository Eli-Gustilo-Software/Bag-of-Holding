<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.character.CharacterFragment"
    android:background="@color/cardview_dark_background"
    >

    <TextView
        android:id="@+id/character_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vincint Valentine"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/character_main_bag_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        />

    <ImageButton
        android:id="@+id/character_main_bag_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/ic_purse"
        app:layout_constraintBottom_toTopOf="@+id/character_mainbag_textview"
        app:layout_constraintEnd_toEndOf="@+id/character_name_textview"
        app:layout_constraintStart_toStartOf="@+id/character_name_textview" />

    <ImageButton
        android:id="@+id/character_coin_purse_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ic_purse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/charcater_new_item_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_new_item_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/character_mainbag_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bag of Holding"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/character_purse_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Coin Purse"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/character_coin_purse_button"
        app:layout_constraintStart_toStartOf="@+id/character_coin_purse_button"
        app:layout_constraintTop_toBottomOf="@+id/character_coin_purse_button" />

    <TextView
        android:id="@+id/character_newitem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="New Item"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/charcater_new_item_button"
        app:layout_constraintStart_toStartOf="@+id/charcater_new_item_button"
        app:layout_constraintTop_toBottomOf="@+id/charcater_new_item_button" />


</androidx.constraintlayout.widget.ConstraintLayout>
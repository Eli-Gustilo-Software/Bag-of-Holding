<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consumables_cell_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E49F5C"
    >

    <ImageView
        android:id="@+id/consumables_cell_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/item_potion_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/consumables_cell_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/cinzel_decorative"
        android:text="Potion of Health"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/consumables_cell_effect1_textview"
        app:layout_constraintStart_toEndOf="@+id/consumables_cell_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/consumables_cell_effect1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/cinzel_decorative"
        android:text="Heals: D+5"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/consumables_cell_imageview"
        app:layout_constraintStart_toEndOf="@+id/consumables_cell_imageview"
        app:layout_constraintTop_toTopOf="@+id/consumables_cell_imageview" />

    <TextView
        android:id="@+id/armor_cell_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Over 9000!"
        android:textStyle="bold"
        android:fontFamily="@font/cinzel_decorative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/consumables_cell_imageview"
        app:layout_constraintTop_toBottomOf="@+id/consumables_cell_effect1_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>